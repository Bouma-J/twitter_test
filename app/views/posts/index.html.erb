<!-- Page Header-->
<header class="masthead" style="background-image: url(<%= asset_path 'step1.jpg' %>)">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Exprimez vous en toute confiance</h1>
                    <span class="subheading">Liste complete des tweets que vous avez fait</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
        <p id="notice"><%= notice %></p>
        <% @posts.each do |post| %>
          <!-- Post preview-->
            <div class="post-preview">
              <%= link_to post_path(post) do %>
                <h2 class="post-title"><%= post.content %></h2>
              <% end %>
              <p class="post-meta">Publié par
                <a href="#">ujkz class</a>
                en mars <%= time_ago_in_words(post.created_at) %>
              </p>
              <p class="post-meta">
              <td><%= link_to 'Modifier', edit_post_path(post) %></td>
              <td><%= link_to 'supprimer', post, method: :delete, data: { confirm: 'Etes-vous sûr ?' } %></td>
              </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
          <% end %>
        </div>
    </div>
</div>